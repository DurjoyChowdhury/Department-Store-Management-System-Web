@model DepartmentStoreManagementSystemWebApp.Models.Customer
@{
    ViewBag.Title = "SaveCustomer";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        input.btn-block[type="submit"] {
            width: 50%;
            margin-left: 353px;
        }
    </style>
</head>
<body>
<h1 class="text-center">save customer</h1>
<div class="container">
    <form method="post">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Customer ID</label>
            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CustomerId, new { Value = ViewBag.customerId, @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Sales No</label>
            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.SalesNo, new { Value = ViewBag.customerSalesNo, @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-10">

                @Html.EditorFor(x => x.Date, new { htmlAttributes = new { @class = "datepicker" } })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Phone</label>
            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Phone" })
            </div>
        </div>
        <div class="form-group row">

            <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label"> Address</label>
            <div class="col-sm-10">

                @Html.TextAreaFor(x => x.Address, new { @class = "form-control", placeholder = "Address" })
            </div>

        </div>


        <button class="btn btn-primary btn-block"> Save</button>
    </form>
</div>
@if (ViewBag.message != null)
{
    <h3 class="text-center">@ViewBag.message</h3>
}

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script>
    $(function () {
        $(".datepicker").datepicker(
            { dateFormate: "yy-mm-dd" });
    });
</script>
</body>
</html>


























