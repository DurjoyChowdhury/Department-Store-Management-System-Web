@model DepartmentStoreManagementSystemWebApp.Models.AddProduct
@{
    ViewBag.Title = "AddProduct";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <style>
    label {
        
        font-family: Arial;
    }
</style>
</head>
<body>
<div class="container">
    <form method="post">
        <h1 class="text-center"> Add Product</h1>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Code</label>
            <div class="col-sm-10">
               
                @Html.TextBoxFor(x => x.Code, new { Value = ViewBag.num,@class="form-control", placeholder="code" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
               
                @Html.TextBoxFor(x => x.Name, new {@class="form-control",placeholder="Name"})
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Purchase Product</label>
            <div class="col-sm-10">
                
                @Html.TextBoxFor(x => x.PurchaseProduct, new { @class = "form-control", placeholder = "Purchase Product" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Sale Product</label>
            <div class="col-sm-10">
                
                @Html.TextBoxFor(x => x.SaleProduct,new {@class="form-control",placeholder="Sale Product"})
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Brand</label>
            <div class="col-sm-10">
                
                @Html.DropDownListFor(x => x.Brand, new SelectList(ViewBag.list, "Name", "Name"), "Select", new { @class = "form-control form-control-md" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Vat</label>
            <div class="col-sm-10">
                
                @Html.TextBoxFor(x => x.Vat,new {@class="form-control",placeholder="Vat %"})
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Discount</label>
            <div class="col-sm-10">
                
                @Html.TextBoxFor(x => x.Discount,new {@class="form-control",placeholder="Discount %"}) 
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Quantity</label>
            <div class="col-sm-10">
                
                @Html.TextBoxFor(x => x.Quantity,new {@class="form-control",placeholder="Quantity"})
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-10">
                
                @Html.EditorFor(x => x.Date, new { htmlAttributes = new { @class = "datepicker" } })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Weight</label>
            <div class="col-sm-10">
               
                @Html.TextBoxFor(x => x.Weight, new {@class="form-control",placeholder="Amount gm"}) 
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Supplier</label>
            <div class="col-sm-10">
               
                @Html.DropDownListFor(x => x.Supplier, new SelectList(ViewBag.list2, "Name", "Name"), "Select", new { @class = "form-control form-control-md" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Reciver By</label>
            <div class="col-sm-10">
                
                @Html.DropDownListFor(x => x.ReceivedBy, new SelectList(ViewBag.list3, "Name", "Name"), "Select", new { @class = "form-control form-control-md" })
            </div>
        </div>
        <input type="submit" value="Save" class="btn btn-primary btn-block" />
    </form>
    @if (ViewBag.message != null)
    {
        <h3 class="text-center">@ViewBag.message</h3>
    }
</div>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script>
    $(function () {
        $(".datepicker").datepicker(
            { dateFormate: "yy-mm-dd" });
    });

</script>
</body>
</html>












