@model DepartmentStoreManagementSystemWebApp.Models.LogIn
@{
    ViewBag.Title = "UpdateSalesPerson";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Hello, world!</title>
</head>
<body>
    <h1 class="text-center">Update sales person</h1>

    <div class="container">
        <form method="post">
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    
                    @Html.DropDownListFor(x => x.Name, new SelectList(ViewBag.ListAllName, "Name", "Name"), "Select", new { @id = "nameSalesman", @class = "form-control form-control-md" })
                </div>
            </div>
            <div class="form-group row">

                <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label">Present Address</label>
                <div class="col-sm-10">
                    
                    @Html.TextAreaFor(x => x.PresentAddress, new { @id = "presentAdd", @class = "form-control",placeholder="Present Address" })
                </div>
            </div>
            <div class="form-group row">

                <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label">Permanent Address</label>
                <div class="col-sm-10">
                   
                    @Html.TextAreaFor(x => x.PermanentAddress, new { @id = "permanentAdd", @class = "form-control",placeholder="Permanent Address" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    
                    @Html.TextBoxFor(x => x.Email, new { @id = "email", @class = "form-control", placeholder = "Email" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">NID</label>
                <div class="col-sm-10">
                    
                    @Html.TextBoxFor(x => x.NID, new { @id = "nid", @class = "form-control", placeholder = "NID" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Phone</label>
                <div class="col-sm-10">
                   
                    @Html.TextBoxFor(x => x.Phone, new { @id = "phone", @class = "form-control", placeholder = "Phone" })
                </div>
            </div>
           
            <input type="submit" value="OK" class="btn btn-primary btn-block" />
        </form>
        @if (ViewBag.message != null)
        {
            <h2 class="text-center">@ViewBag.message</h2>
        }

    </div>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script>

    $(document).ready(function () {
        $("#nameSalesman").change(function () {
            var selectdepartmentId = $("#nameSalesman").val();


            var json = { nameSales: selectdepartmentId };
            $.ajax({
                type: "POST",
                url: '@Url.Action("GetAllName", "SalesPerson")',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(json),
                success: function (data) {
                    $.each(data, function (key, value) {
                        $("#presentAdd").val(value.PresentAddress);
                        $("#permanentAdd").val(value.PermanentAddress);
                        $("#email").val(value.Email);

                        $("#nid").val(value.NID);
                        $("#phone").val(value.Phone);


                    });
                }
            });
        });
    });


</script>
</body>
</html>















