@model DepartmentStoreManagementSystemWebApp.Models.LogIn
@{
    ViewBag.Title = "SaveSalesPerson";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        input.btn-block[type="submit"] {
            width: 50%;
            margin-left: 353px;
        }
    </style>
</head>
<body>
    <h1 class="text-center">Save sales person</h1>

    <div class="container">
        <form method="post">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Date Of Birth</label>
                <div class="col-sm-10">
                   
                    @Html.EditorFor(x => x.DateOfBirth, new { htmlAttributes = new { @class = "datepicker", placeholder = "Date Of Birth" } })
                </div>
            </div>
            <div class="form-group row">

                <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label">Present Address</label>
                <div class="col-sm-10">
                   
                    @Html.TextAreaFor(x => x.PresentAddress, new { @class = "form-control", placeholder = "Password" })
                </div>
            </div>
            <div class="form-group row">

                <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label">Permanent Address</label>
                <div class="col-sm-10">
                    
                    @Html.TextAreaFor(x => x.PermanentAddress, new {@class="form-control" , placeholder = "Permanent Address"})
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Phone Number</label>
                <div class="col-sm-10">
                   
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Phone Number" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">NID</label>
                <div class="col-sm-10">
                  
                    @Html.TextBoxFor(x => x.NID, new { @class = "form-control", placeholder = "NID" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Type</label>
                <div class="col-sm-10">
                    
                    @Html.DropDownListFor(x => x.Type, new SelectList(ViewBag.list, "Name", "Name"), "--Select--", new { @class = "form-control form-control-md" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Date</label>
                <div class="col-sm-10">
                   
                    @Html.EditorFor(x => x.Date, new { htmlAttributes = new { @class = "datepicker", placeholder="Date" } })
                </div>
            </div>
            
            <input type="submit" value="Save" class="btn btn-primary btn-block" />



        </form>
        @if (ViewBag.message != null)
        {
            <h2 class="text-center">@ViewBag.message</h2>
        }

    </div>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script>
    $(function () {
        $(".datepicker").datepicker(
            { dateFormate: "yy-mm-dd" });
    });
</script>
</body>
</html>











