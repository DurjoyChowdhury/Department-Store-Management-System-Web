@model DepartmentStoreManagementSystemWebApp.Models.LogIn
@{
    ViewBag.Title = "Index";
    Layout = null;
    
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <title>Hello, world!</title>
</head>
<body>
<div class="container">
    <figure>
        <img src="~/Content/img/logo.png" height="80px" width="150px">
       
    </figure>
    <section></section>
</div>
<h1 class="title"><span style="color:#ff480b">S</span>uper <span style="color: #ff480b">S</span>hop</h1>
<div class="form">
    <form method="post">

        <h1 class="text-center">Log In</h1>
        <input type="text" placeholder="User Name" name="@Html.NameFor(c => c.Name)">

        <input type="password" placeholder="Password" name="@Html.NameFor(c => c.Password)">

        <input type="submit" value="Log In"/>
       
        
            @if (ViewBag.message != null)
            {
                <h4>
                    @ViewBag.message
                </h4>
            }
        

    </form>
    
</div>
<div class="video-wrap">
    <video class="video-bg" autoplay loop muted plays-inline>
        <source src="~/Content/img/Retail.mp4" type="video/mp4">
    </video>
</div>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>











