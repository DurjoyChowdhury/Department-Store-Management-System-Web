                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><a href="@Url.Action("Supplier","Product")" target="myframe">Supplier</a></li>
                                <li class="list-group-item"><a href="@Url.Action("Brand","Product")" target="myframe">Brand Save</a></li>
                               
                               
                                <li class="list-group-item"><a href="@Url.Action("ProductByBrand", "Product")" target="myframe">View Product Brand</a></li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingThree">
                        <h5 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Product
                            </button>
                        </h5>
                    </div>
                    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><a href="@Url.Action("AddProduct","Product")" target="myframe">Add Product</a></li>
                                <li class="list-group-item"><a href="@Url.Action("UpdateProduct","Product")" target="myframe">Update Product</a></li>
                                <li class="list-group-item"><a href="@Url.Action("DeleteProduct","Product")" target="myframe">Delete Product</a></li>
                                <li class="list-group-item"><a href="@Url.Action("StockIn","Product")" target="myframe">Stock In</a></li>

                               
                                <li class="list-group-item"><a href="@Url.Action("SaveRefund","Refund")" target="myframe">Refund Product</a></li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingThree">
                        <h5 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseThree">
                                Sell
                            </button>
                        </h5>
                    </div>
                    <div id="collapseFour" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><a href="@Url.Action("SaveCustomer","Customer")" target="myframe">Customer</a></li>
                                <li class="list-group-item"><a href="@Url.Action("SaleProduct","Sale")" target="myframe">Sale</a></li>
                                <li class="list-group-item"><a href="@Url.Action("Payment","Sale")" target="myframe">Payment Process</a></li>

