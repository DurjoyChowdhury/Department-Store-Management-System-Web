                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingThree">
                        <h5 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseFive" aria-expanded="false" aria-controls="collapseThree">
                                View Report
                            </button>
                        </h5>
                    </div>
                    <div id="collapseFive" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><a href="@Url.Action("ViewRefundByDate", "Refund")" target="myframe">View Refund</a></li>
                                <li class="list-group-item"><a href="@Url.Action("ViewCustomerByDate", "Customer")" target="myframe">View Customer</a></li>
                                

