                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><a href="@Url.Action("SaveSalesPerson","SalesPerson")" target="myframe">Save Sales Person</a></li>
                                <li class="list-group-item"><a href="@Url.Action("UpdateSalesPerson","SalesPerson")" target="myframe">Update Sales Person</a></li>
                                <li class="list-group-item"><a href="@Url.Action("DeleteSalesman","SalesPerson")" target="myframe">Delete Sales Person</a></li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingTwo">
                        <h5 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Party
                            </button>
                        </h5>
                    </div>
                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
